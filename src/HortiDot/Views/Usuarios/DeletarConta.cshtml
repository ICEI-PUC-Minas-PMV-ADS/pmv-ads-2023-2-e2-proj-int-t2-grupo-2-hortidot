@model HortiDot.Models.Usuario

@{
    ViewData["Title"] = "DeletarConta";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HortiDot</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cadastro.css" asp-append-version="true" />
</head>

<body>
    <header>
        <img src="https://raw.githubusercontent.com/ICEI-PUC-Minas-PMV-ADS/pmv-ads-2023-2-e2-proj-int-t2-grupo-2-hortidot/af6c62358c723c0cbfc7acfe411df44cf236f59f/docs/img/logo-hortidot-horizontal.svg" />
    </header>

    <main>

    <h1>Tem certeza que deseja exlcuir sua conta?</h1>

    <h3>Todos os seus dados serão apagados.</h3>
    <div>
        <form asp-action="DeletarConta">
            <input type="hidden" asp-for="ID" />
            <a asp-controller="Usuarios" asp-action="EditarUsuario" asp-route-id="@Model?.ID" class="btn btn-amarelo">Não, quero manter minha conta</a> |
            <input type="submit" value="Sim, quero excluir" class="btn btn-vermelho" />
        </form>
    </div>
</main>
    <footer>
        <div class="container">
            <p>©2022-2023 HortiDot. Todos os direitos reservados.</p>
            <p>Política de Privacidade</p>
        </div>
    </footer>
</body>
</html>