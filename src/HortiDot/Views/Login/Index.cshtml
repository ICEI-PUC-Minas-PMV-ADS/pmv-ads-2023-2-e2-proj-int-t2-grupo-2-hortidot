@model HortiDot.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/login.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<body>
    <div class="containerr">
        <div class="backgroundlogin">
            <div>
                <div class="caixa-central">
                    <img class="logo" src="https://raw.githubusercontent.com/ICEI-PUC-Minas-PMV-ADS/pmv-ads-2023-2-e2-proj-int-t2-grupo-2-hortidot/af6c62358c723c0cbfc7acfe411df44cf236f59f/docs/img/logo-hortidot-vertical.svg"></img>
                    <form asp-action="Index">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Senha" class="control-label"></label>
                            <input asp-for="Senha" class="form-control" />
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Acessar" class="btn btn-success" />
                        </div>
                        <a class="criarconta" asp-area="" asp-controller="Usuarios" asp-action="CriarConta">
                            Ainda não possui uma conta? Inscreva-se!
                        </a>

                    </form>
                </div>
            </div>
            </div>
            
        <footer class="footer">
            <p>©2022-2023 HortiDot. Todos os direitos reservados.</p>
            <p>Política de Privacidade</p>
        </footer>
    </div>
</body>
