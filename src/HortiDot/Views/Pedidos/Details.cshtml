@model HortiDot.Models.Pedido

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <h1>Detalhes do pedido</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompradorId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataPedido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StatusPedidos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Produtos)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => model.CompradorId)
                </td>
                <td>
                    @Html.DisplayFor(model => model.DataPedido)
                </td>
                <td>
                    @Html.DisplayFor(model => model.StatusPedidos)
                </td>
                <td>
                    <ul>
                        @foreach (var item in Model.Produtos)
                        {
                            <li>
                                @Html.DisplayFor(model => item.Nome)
                            </li>
                        }
                    </ul>
                    
                </td>
            </tr>
        </tbody>
    </table>

    <div class="form-group btns">
        <a asp-action="Index" class="btn btn-amarelo">Ver todos</a>
        <a class="btn btn-verde" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
        <a class="btn btn-vermelho" asp-action="Delete" asp-route-id="@Model?.Id">Apagar</a>
    </div>
</div>